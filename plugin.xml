<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="cordova-plugin-iphone-x-viewport-fix" version="0.1.1">
  <name>iPhone X Viewport Fix</name>
  <engines>
    <engine name="cordova" version=">=7.1.0"/>
    <engine name="cordova-ios" version=">=4.5.0"/>
  </engines>

  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="FixiPhoneXViewport">
        <param name="ios-package" value="FixiPhoneXViewport" />
      </feature>
    </config-file>

    <dependency id="cordova-plugin-add-swift-support" version="2.0.2"/>
    <source-file src="src/ios/FixiPhoneXViewport.swift" />
  </platform>

</plugin>
